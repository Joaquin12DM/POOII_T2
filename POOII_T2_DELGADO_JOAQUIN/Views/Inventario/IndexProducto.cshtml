@using DataLayer.DTO;
@model IEnumerable<ProductoCategoriaDTO>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    TempData["Title"] = "Lista de Productos";
}

<h1>@TempData["Title"]</h1>
<a asp-action="NuevoProducto" class="btn btn-success">Crear nuevo producto</a>


<table class="table">
    <thead>
        <tr>
            <th>ID Producto</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Categoria</th>
            <th>Estado</th>
            <th>Fecha Registro</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var producto in Model)
        {
            <tr>
                <td>@producto.Idproducto</td>
                <td>@producto.Nombre</td>
                <td>@producto.Descripcion</td>
                <td>@producto.NombreCategoria</td>
                <td>@producto.Estado</td>
                <td>@producto.FechaRegistro</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@producto.Idproducto" class="btn btn-primary">Edit</a>
                    <a asp-action="Eliminar" asp-route-id="@producto.Idproducto" class="btn btn-danger">Delete </a>
                </td>

            </tr>
        }
        
    </tbody>
</table>
